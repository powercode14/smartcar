<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="230dp"
    tools:context="com.example.ksh.smartcar.fragment.AutoFragment"
    android:background="@android:color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/bar1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        android:id="@+id/titleTextView"
        android:text="Sensing Result"
        android:layout_below="@+id/bar1"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:id="@+id/bar2"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_height="10dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:stretchColumns="1,3,5,7"
        android:layout_marginTop="42dp"
        android:layout_alignParentStart="true"
        android:id="@+id/tableTitleLayout">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/tableLayout"
            android:id="@+id/bar3"
            android:background="@android:color/black"/>

        <TableRow
            android:gravity="center"
            android:id="@+id/tr">
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:background="@android:color/white"
                android:id="@+id/tableTextView"
                android:text="Area" />
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:background="@android:color/white"
                android:id="@+id/tableTextView2"
                android:text="Temp" />
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:background="@android:color/white"
                android:id="@+id/tableTextView3"
                android:text="Humidity" />
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:background="@android:color/white"
                android:id="@+id/tableTextView4"
                android:text="Lux" />
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/tr"
            android:id="@+id/bar4"
            android:background="@android:color/black"/>
    </TableLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tableTitleLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/listView"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonClear"
        android:background="@drawable/trash"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
